{
  "extends": ["airbnb-base"],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true 
  },
  "rules": {
    "max-len": [1, 80, 2, { "ignoreComments": true }],
    "semi": "off",
    "no-use-before-define": "off",
    "consistent-return":"off",
    "class-methods-use-this":"off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
