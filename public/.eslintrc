{
  "extends": ["airbnb-base"],
  "parser": "babel-eslint",
  "plugins": ["react"],
  "env": {
    "browser": true
  },
  "rules": {
    "max-len": [1, 140, 2, { "ignoreComments": true }],
    "semi": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "class-methods-use-this": ["error", { "exceptMethods": ["render"] }]
  },
  "settings": {
    "import/no-unresolved": "off"
  }
}
